alt + shift - t : open -a kitty
ctrl + shift - y : open -a sidekick

# Switch layout to float on space
shift + alt + ctrl - f : yabai -m space --layout float
# Switch layout to bsp on space
shift + alt + ctrl - b : yabai -m space --layout bsp
# Switch layout to stack on space
shift + alt + ctrl - s : yabai -m space --layout stack

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
shift + ctrl + alt - r : sketchybar --reload 

# Focus
shift + ctrl - h : yabai -m window --focus west
shift + ctrl - j : yabai -m window --focus south
shift + ctrl - k : yabai -m window --focus north
shift + ctrl - l : yabai -m window --focus east
shift + ctrl - p : yabai -m window --focus stack.prev || yabai -m window --focus stack.next || yabai -m window --focus prev || yabai -m window --focus last
shift + ctrl - n : yabai -m window --focus stack.next || yabai -m window --focus stack.prev || yabai -m window --focus next || yabai -m window --focus first

# Focus Window under Mouse
alt + shift - space : yabai -m window --focus mouse

# Focus Display & Move Window to Display
alt - d: yabai -m display --focus recent
shift + alt - d: yabai -m window --display recent; yabai -m display --focus recent

# Swap Windows
shift + ctrl - left : yabai -m window --swap west
shift + ctrl - up : yabai -m window --swap north
shift + ctrl - down : yabai -m window --swap south
shift + ctrl - right : yabai -m window --swap east

# Wrap Windows
shift + cmd - left : yabai -m window --warp west
shift + cmd - up : yabai -m window --warp north
shift + cmd - down : yabai -m window --warp south 
shift + cmd - right : yabai -m window --warp east

# rotate layout clockwise
shift + ctrl - r : yabai -m space --rotate 270

# flip along y-axis
shift + ctrl - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + ctrl - x : yabai -m space --mirror x-axis

# toggle window float
ctrl + shift - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
ctrl + shift - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + shift - 0 : yabai -m space --balance

#move window to prev and next space
cmd + ctrl - l : yabai -m window --space next; yabai -m space --focus next;
cmd + ctrl - h : yabai -m window --space prev; yabai -m space --focus prev;

# move window to space 
shift + ctrl - 1 : yabai -m window --space 1;
shift + ctrl - 2 : yabai -m window --space 2;
shift + ctrl - 3 : yabai -m window --space 3;
shift + ctrl - 4 : yabai -m window --space 4;
shift + ctrl - 5 : yabai -m window --space 5;
shift + ctrl - 6 : yabai -m window --space 6;
shift + ctrl - 7 : yabai -m window --space 7;
shift + ctrl - 8 : yabai -m window --space 8;
shift + ctrl - 9 : yabai -m window --space 9;

